<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab1.Tab1AddActivity">

    <Button
        android:id="@+id/tab1_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Add"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tab1_cancle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Cancel"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tab1_new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="104dp"

        android:hint="Please type a name"
        android:inputType="text"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@+id/tab1_cancle_button"
        app:layout_constraintTop_toBottomOf="@+id/tab1_cancle_button" />

    <EditText
        android:id="@+id/tab1_new_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:hint="010-0000-0000"
        android:inputType="phone"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@+id/tab1_new_name"
        app:layout_constraintTop_toBottomOf="@+id/tab1_new_name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/tab1_new_name"
        app:layout_constraintStart_toStartOf="@+id/tab1_new_name" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        app:layout_constraintBottom_toTopOf="@+id/tab1_new_phone"
        app:layout_constraintStart_toStartOf="@+id/tab1_new_phone" />
</androidx.constraintlayout.widget.ConstraintLayout>